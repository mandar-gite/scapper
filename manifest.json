{
    "manifest_version": 2,
    "name": "XPath Scraper",
    "version": "1.0",
  
    "browser_action": {
      "default_popup": "popup.html",
      "default_icon": "icon.png"
    },
  
    "permissions": [
      "activeTab",
      "storage"
    ],
  
    "content_scripts": [
      {
        "js": ["content_script.js"],
        "matches": ["<all_urls>"]
      }
    ]
  }
  